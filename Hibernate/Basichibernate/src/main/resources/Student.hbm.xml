<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.example.Student">
        <!--Primary key-->
        <id name="s_id">
            <generator class="increment"></generator>
        </id>
        <!--non-primary key-->
        <property name="s_name" column="Student_Name"></property>
        <property name="s_age" column="Student_Age"></property>
        <property name="s_subject" column="Student_Sub"></property>
    </class>

</hibernate-mapping>